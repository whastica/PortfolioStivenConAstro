---
import TagPill from '../components/TagPilll.astro';

const {
  title,
  description,
  tags,
  image,
  link,
  Github,
  technologies,
  caracteristicasTecnicas,
  descripcionTecnica
} = Astro.props;
---

<article class="
  bg-theme-surface glass-effect
  rounded-2xl p-6 
  transition-all duration-300 
  hover:scale-[1.02] hover:shadow-2xl
  border border-theme
  group
  fade-in-up
">
  <div class="flex flex-col gap-4">
    <div class="relative overflow-hidden rounded-xl">
      <img 
        class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105" 
        src={image} 
        alt={title}
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
    
    <div class="space-y-3">
      <h3 class="text-xl font-bold text-custom-cyan group-hover:text-custom-cyan/80 transition-colors duration-300">
        {title}
      </h3>
      <p class="text-theme-secondary leading-relaxed">
        {description}
      </p>
    </div>

    <div class="space-y-3">
      <h4 class="text-lg font-semibold text-custom-cyan flex items-center gap-2">
        {caracteristicasTecnicas}
      </h4>
      <p class="text-theme-secondary leading-relaxed text-sm">
        {descripcionTecnica}
      </p>
    </div>

    <div class="space-y-3">
      <h4 class="text-lg font-semibold text-custom-cyan flex items-center gap-2">
        {technologies}
      </h4>
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <TagPill class={tag.class}>
            <tag.icono class="w-4 h-4" />
            <span>{tag.name}</span>
          </TagPill>
        ))}
      </div>
    </div>

    <div class="flex gap-3 pt-4">
      <a 
        href={link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="flex-1 bg-custom-cyan hover:bg-custom-cyan/80 
               text-white font-medium py-2 px-4 rounded-lg 
               transition-all duration-300 
               hover:scale-105 hover:shadow-lg text-center"
      >
        ðŸš€ Demo
      </a>
      <a 
        href={Github} 
        target="_blank" 
        rel="noopener noreferrer"
        class="flex-1 bg-theme-surface hover:bg-theme-surface/80 
               text-theme border border-theme
               font-medium py-2 px-4 rounded-lg 
               transition-all duration-300 
               hover:scale-105 hover:shadow-lg text-center"
      >
        ðŸ’» GitHub
      </a>
    </div>
  </div>
</article>